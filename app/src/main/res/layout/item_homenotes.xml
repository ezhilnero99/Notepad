<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/rectmainbg"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/itemIV"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_60sdp" />

    <RelativeLayout
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectlinebg"
        android:backgroundTint="@color/shiny_blue">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thin_block"
            android:text="hellohuiiiiiiii"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp" />
        <TextView
            android:id="@+id/labelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/titleTV"
            android:layout_margin="@dimen/_10sdp"
            android:text="hii"
            android:background="@drawable/rectbg"
            android:backgroundTint="@color/matt_blue"/>
        <ImageView
            android:id="@+id/heartIV"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/heartwhite"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/titleTV"/>
    </RelativeLayout>
</LinearLayout>